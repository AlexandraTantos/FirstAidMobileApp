<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".View.BabyChokingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_baby_choking"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/baby_choking_aid"
                android:layout_marginTop="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_baby_choking_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baby Choking First Aid:\n\n1. Assess if the baby is coughing or making sounds. If yes, encourage them to cough.\n\n2. If the baby is silent or turning blue, begin back blows.\n\n3. Support the baby's head and place them face down along your forearm.\n\n4. Deliver 5 firm back blows between the shoulder blades.\n\n5. If unsuccessful, turn the baby face-up and give 5 chest thrusts using two fingers.\n\n6. Repeat steps until the object is expelled or emergency help arrives."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="8dp"
                    android:padding="20dp"
                    android:gravity="start|top" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
